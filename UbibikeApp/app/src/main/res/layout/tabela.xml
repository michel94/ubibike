<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:id="@+id/tabela">

    <View
        android:layout_height="3dip"
        android:background="#FF909090" />

    <TableRow android:weightSum="1">

        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:layout_marginRight="4dp">

            <TextView
                android:id="@+id/pontos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="#FF909090"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>

               <TextView
                android:layout_height="match_parent" android:layout_width="wrap_content"
                android:textStyle="bold" android:textSize="20sp"
                android:textColor="#FF909090"
                android:text="Pontos"
                android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_weight="1" android:layout_marginRight="4dp">

            <TextView
                android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:textStyle="bold" android:textSize="30sp"
                android:text=""/>
                <ImageView
                    android:layout_column="1"
                    android:padding="8dip"
                    android:src="@drawable/clock"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    />
            <TextView
                android:layout_height="match_parent" android:layout_width="wrap_content"
                android:textSize="25sp"
                android:text="00:00:00"
                android:textColor="#FF909090"
                android:id="@+id/hora"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_height="2dip"
            android:background="#FF909090"
            />

    </TableRow>

</TableLayout>
